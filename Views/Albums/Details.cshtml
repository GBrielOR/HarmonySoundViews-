@model HarmonySound.API.DTOs.AlbumDto

@{
    ViewData["Title"] = "Album Details";
}

<h2>Album Details</h2>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Artist:</strong> @Model.ArtistName</p>
    <p><strong>Creation Date:</strong> @Model.CreationDate.ToString("yyyy-MM-dd")</p>
</div>

<h5>Songs in this album</h5>
@if (Model.Contents != null && Model.Contents.Any())
{
    <ul class="list-group">
        @foreach (var song in Model.Contents)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @song.Title
                <span class="text-muted">@song.Type</span>
            </li>
        }
    </ul>
}
else
{
    <p>No songs in this album.</p>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>