@model IEnumerable<HarmonySound.API.DTOs.AlbumDto>

@{
    ViewData["Title"] = "Albums";
}

<h2>Albums</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Create New Album</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Creation Date</th>
            <th>Songs</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var album in Model)
    {
        <tr>
            <td>@album.Title</td>
            <td>@album.ArtistName</td>
            <td>@album.CreationDate.ToString("yyyy-MM-dd")</td>
            <td>@(album.Contents?.Count ?? 0)</td>
            <td>
                <a asp-action="Details" asp-route-id="@album.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@album.Id" class="btn btn-warning btn-sm">Edit</a>
                <form asp-action="Delete" asp-route-id="@album.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>